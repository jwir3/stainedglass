<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsActivityLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StainedGlassSettingsActivity"
    tools:ignore="MergeRootFrame" 
    android:contentDescription="@string/settings_name">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:id="@+id/settingSaveButton"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="visible" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:columnCount="7"
        android:rowCount="4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/totalFlashLengthLabelText"
            android:id="@+id/lengthFlashingLabel"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:visibility="visible" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/lengthFlashingInput"
            android:layout_gravity="center_vertical|bottom"
            android:enabled="true"
            android:numeric="integer"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/singleFlashLabelText"
            android:id="@+id/singleFlashLabel"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="bottom"
            android:visibility="visible" />

        <EditText
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/singleFlashInput"
            android:layout_gravity="center_vertical|bottom"
            android:enabled="true"
            android:numeric="integer"
            android:layout_row="1"
            android:layout_column="3"
            android:visibility="visible" />

    </GridLayout>

</FrameLayout>
